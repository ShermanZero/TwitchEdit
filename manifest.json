{
  "manifest_version": 2,

  "name": "TwitchEdit",
  "version": "1.0",
  "description": "Add an edit button to the Twitch clips page  |  Copyright Â© 2019 Kieran (ShermanZero) Sherman",

  "content_scripts": [{
    "css": ["css/styles.css"],
    "js": ["js/inject.js"],
    "matches": ["https://www.twitch.tv/shermanzero/manager/clips/*"]
  }],

  "permissions": [
    "tabs",
    "activeTab"
  ],

  "browser_action": {
    "default_title": "TwitchEdit"
  },

  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  }
}
