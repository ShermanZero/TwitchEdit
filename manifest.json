{
  "manifest_version": 2,

  "name": "TwitchEdit",
  "version": "1.4.0",
  "description": "Adds an edit button to Twitch clips (in the Clips Manager) which takes you to directly editting the clip.  Also replaces standard 'Submit' button with 'Submit and Return to Clips Manager' which automatically closes the edit tab upon submission, and reloads the Clips Manager.",

  "web_accessible_resources": [
    "css/editButton/editButtonStyles.css",
    "css/submitButton/submitButtonStyles.css",
    "css/clipButton/clipButtonStyles.css",

    "html/editButton.html",
    "html/submitButton.html",
    "html/clipButton.html"
  ],

  "content_scripts": [
    {
      "matches": ["https://*.twitch.tv/*/manager/clips*"],
      "js": [
        "js/content/css/inject_CSS.js",
        "js/content/inject_editHTML.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": ["https://*.twitch.tv/*"],
      "js": [
        "js/content/css/inject_CSS.js",
        "js/content/inject_clipHTML.js"
      ],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": [
      "js/background/background.js"
    ],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "https://clips.twitch.tv/*"
  ],

  "browser_action": {
    "default_title": "TwitchEdit",
    "default_popup": "html/popup/popup.html"
  },

  "icons": {
    "16": "icons/twitchedit/twitchedit_16.png",
    "48": "icons/twitchedit/twitchedit_48.png",
    "128": "icons/twitchedit/twitchedit_128.png"
  }
}
